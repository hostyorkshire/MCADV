# MCADV Environment Variables
# Copy to .env and fill in values

# LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Groq API (optional)
# GROQ_API_KEY=your_api_key_here
# GROQ_MODEL=llama3-8b-8192

# OpenAI API (optional)
# OPENAI_API_KEY=your_api_key_here
# OPENAI_MODEL=gpt-4o-mini

# Server Configuration
BOT_HOST=0.0.0.0
BOT_PORT=5000
BOT_DEBUG=false

# Radio Configuration
RADIO_PORT=/dev/ttyUSB0
RADIO_BAUD=115200

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_PER_MINUTE=10

# Admin user IDs (Meshtastic node IDs, comma-separated)
# Example: ADMIN_USERS=!a1b2c3d4,!e5f6g7h8
ADMIN_USERS=

# Redis (optional, for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# ============================================
# TELEGRAM BOT (OPTIONAL)
# ============================================

# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# MCADV server URL (local or remote)
MCADV_SERVER_URL=http://localhost:5000

# Session settings
TELEGRAM_SESSION_EXPIRY=3600
